<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE properties SYSTEM "http://java.sun.com/dtd/properties.dtd">
<!-- $Id$ -->
<!--
Font speficiation format:
  name,style,size
where name is the font name like Arial, style is 0 = plain, 1 = bold,
2 = italic, 3 = bolditalic, size is in points.

Color specification format:
  RRGGBBAA
where RR = 2byte hex value for red
      GG = 2byte hex value for green
      BB = 2byte hex value for blue
      AA = 2byte hex value for the alpha channel (ff=no transparency)
-->
<properties>
<comment>GraleJ factory properties</comment>

<entry key="server.port">1080</entry>


<!-- generic look and feel -->
<entry key="gui.l+f.icontheme">crystal</entry>
<entry key="gui.l+f.java-l+f">System Default</entry>
<entry key="gui.windows.main.size.width">400</entry>
<entry key="gui.windows.main.size.height">400</entry>
<entry key="gui.windows.location.xmarginoffset">100</entry>
<entry key="gui.windows.location.ymarginoffset">100</entry>
<entry key="gui.windows.location.xdiff">30</entry>
<entry key="gui.windows.location.xdiff2">75</entry>
<entry key="gui.windows.location.ydiff">30</entry>
<entry key="gui.windows.size.xmin">250</entry>
<entry key="gui.windows.size.ymin">150</entry>

<!-- output formatting -->
<entry key="output.latex.snippet">false</entry> 
<!-- whether to print as snippet (as opposed to full document) -->
<entry key="input.lastdir"></entry> 
<entry key="input.lastserver"></entry> 

<!-- message output methods (popup, stderr, file, ignore) -->
<entry key="log.message.info">stderr</entry> 
<entry key="log.message.warning">stderr</entry> 
<entry key="log.message.error">popup</entry> 
<entry key="log.message.critical">popup</entry> 
<entry key="log.message.debug">stderr</entry>
<entry key="log.file">gralej.log</entry>

<!-- application behavior -->
<entry key="behavior.openonload">false</entry>
<entry key="behavior.showstatusbar">true</entry>
<entry key="behavior.showtoolbar">true</entry>
<entry key="behavior.showwindowtoolbar">true</entry>
<entry key="behavior.alwaysfitsize">false</entry>
<entry key="behavior.autoexpandtags">false</entry>
<entry key="behavior.displayModelHiddenFeatures">false</entry>
<entry key="behavior.nodeContentInitiallyVisible">false</entry>
<entry key="behavior.defaultzoom">100</entry>

<!--those are required! -->
<entry key="behavior.defaultzoom.min">10</entry>
<entry key="behavior.defaultzoom.max">1600</entry>

<!-- AVM options -->
<entry key="avm-display.sortnames.font">Arial, 0, 12</entry>
<entry key="avm-display.sortnames.color">003399ff</entry>
